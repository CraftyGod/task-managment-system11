$(".task-check").bind('change', function(){
    if (this.checked){
        $.ajax({
            url: '/tasks/'+this.value+'/complete',
            type: 'PUT',
            data: {"completed": this.checked}
        });
    }
    else {
        alert("no");
    }
});

