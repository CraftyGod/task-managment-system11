$(".checkbox").on('click', function() {
    $.ajax({
        url: '/tasks/' + this.value + '/complete',
        context: this,
        type: 'put',
        data: {"completed": this.checked},
        success: function (response) {
            if (this.checked) {
                $('task.id' + this.value).addClass('done'); // this.checked === true
            } else {
                $('task.id' + this.value).removeClass('done'); // this.checked === false
            }

        }.bind(this)
    });
});