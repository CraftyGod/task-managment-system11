<div class="task priority_<%= task.priority %> completed_<%= task.completed %>" xmlns="http://www.w3.org/1999/html">
  <p>
    <table>
      <% @tasks.each do |task| %>
      <tr id="task<%= task.id %>">
    <span class="title"><%= link_to task.title, edit_task_path(task) %></span>
    <span class="badge badge-pill badge-dark"><%= task.priority %></span>
    <% if task.completed == false %>
          <td><%= link_to content_tag('span', '', class: 'fa fa-square-o'), complete_task_path(task), data: {method: :put}, class: 'action' %></td>
    <% else %>
          <td><%= link_to content_tag('span', '', class: 'fa fa-check-square-o'), complete_task_path(task), data: {method: :put}, class: 'done action' %></td>
    <% end %>
        <td><%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, data: {confirm: 'Are u sure?', remote: true}, class: 'delete' %></td>
        <td><%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %></td>
      </tr>
    <% end %>
    </table>
  </p>
</div>