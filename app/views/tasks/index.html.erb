<% if user_signed_in? %>
  <div class="col-md-12">
    <h1>My tasks</h1>

    <div class="buffer-top">
      <%= link_to "New task", new_task_path, class: 'btn btn-outline-dark' %>
    </div>

    <div class="buffer-top">
      <% @tasks.each do |task| %>
        <%= render partial: 'task', object: task%>
      <%end%>

      <hr style="background-color: #C8C8C8; color: #C8C8C8;"/>

      <% @completed_tasks.each do |task| %>
        <%= render partial: 'task', object: task%>
      <%end%>
    </div>
  </div>
<% else %>
<% end %>