<div class="col-md-6">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <p><%= f.input :firstName,
                  required: true,
                     autofocus: true%></p>
      <p><%= f.input :lastNname,
                  required: true,
                     autofocus: true%></p>
      <p><%= f.input :email,
                  required: false,
                  autofocus: true,
                     input_html: { autocomplete: "email" } %></p>
      <p><%= f.input :password,
                  required: false,
                     input_html: { autocomplete: "current-password" } %></p>
      <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
    </div>

    <div class="form-actions">
      <p><%= f.button :submit, "Log in", class: "btn btn-outline-dark" %></p>
    </div>
  <% end %>

  <%= render "confirmables/shared/links" %>
</div>